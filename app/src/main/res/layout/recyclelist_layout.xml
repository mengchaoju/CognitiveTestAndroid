<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_test"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="15dp"
    android:visibility="visible"
    android:background="@drawable/cardview_item">

    <!--android:foreground="@drawable/cardview_item"-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:accessibilityTraversalAfter="@+id/pt_id_text"
        android:accessibilityTraversalBefore="@+id/pt_id_text"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/pt_id_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:elevation="4dp"
            android:text="Participant ID"
            android:textColor="#000000"
            android:textSize="32sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/pt_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/pt_id_text"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:text="Participant Name"
            android:textColor="#000000"
            android:textSize="28sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/pt_gender_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/pt_name_text"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:text="Gender"
            android:textColor="#000000"
            android:textSize="28sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/pt_dateofbirth_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/pt_name_text"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:text="Participant Date of Birth"
            android:textColor="#000000"
            android:textSize="28sp"
            android:visibility="visible"
            tools:text="dssa" />
    </RelativeLayout>


</RelativeLayout>